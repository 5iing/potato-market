{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: Run App",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter: Run All Tests",
      "type": "dart",
      "request": "launch",
      "program": "test/",
      "noDebug": false
    },
    {
      "name": "Flutter: Run Current Test File",
      "type": "dart",
      "request": "launch",
      "program": "${file}",
      "noDebug": false,
      "args": []
    },
    {
      "name": "Flutter: Debug Current Test File",
      "type": "dart",
      "request": "launch",
      "program": "${file}",
      "noDebug": false,
      "debuggerType": "flutter"
    }
  ]
}
